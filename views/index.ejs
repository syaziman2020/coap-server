    <main id="main" class="main">
      <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->

      <section class="section dashboard">
        
      <div class="row g-3">
        <!-- Kolom untuk pot 1-5, 6-10, 11-15 -->
        <div class="col-lg-10">
            <!-- Baris 1 -->
            <div class="row g-3 mb-3">
                <% if (soilData.length > 0) { %>
                    <% soilData.slice(0, 5).forEach(item => { %>
                        <div class="col">
                            <div class="card info-card">
                                <div class="card-body">
                                    <h5 class="card-title"></h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-moisture"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6><%= item.moisture %>%</h6>
                                            <span class="text-success small pt-1 fw-bold">Kelembapan Tanah</span>
                                            <span class="text-muted small pt-2 ps-1">Pot <%= item.sensor_order %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No soil data available.</p>
                <% } %>
            </div>
            
            <!-- Baris 2 -->
            <div class="row g-3 mb-3">
                <% if (soilData.length > 5) { %>
                    <% soilData.slice(5, 10).forEach(item => { %>
                        <div class="col">
                            <div class="card info-card">
                                <div class="card-body">
                                    <h5 class="card-title"></h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-moisture"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6><%= item.moisture %>%</h6>
                                            <span class="text-success small pt-1 fw-bold">Kelembapan Tanah</span>
                                            <span class="text-muted small pt-2 ps-1">Pot <%= item.sensor_order %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
    
            <!-- Baris 3 -->
            <div class="row g-3">
                <% if (soilData.length > 10) { %>
                    <% soilData.slice(10, 15).forEach(item => { %>
                        <div class="col">
                            <div class="card info-card">
                                <div class="card-body">
                                    <h5 class="card-title"></h5>
                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-moisture"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h6><%= item.moisture %>%</h6>
                                            <span class="text-success small pt-1 fw-bold">Kelembapan Tanah</span>
                                            <span class="text-muted small pt-2 ps-1">Pot <%= item.sensor_order %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    
        <!-- Kolom untuk card suhu dan kelembapan -->
        <div class="col-lg-2">
            <div class="card info-card" style="height: 555px;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="text-center mb-5">
                        <div class="card-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                            <i class="bi bi-thermometer-half"></i>
                        </div>
                        <% if (dhtData) { %>
                            <h6 class="mb-2"><%= dhtData.temperature %>°C</h6>
                        <% } else { %>
                            <h6 class="mb-2">- °C</h6>
                        <% } %>
                        
                        <span class="text-success small pt-1 fw-bold">Suhu Udara</span>
                    </div>
                    <div class="text-center">
                        <div class="card-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                            <i class="bi bi-moisture"></i>
                        </div>
                        <% if (dhtData) { %>
                            <h6 class="mb-2"><%= dhtData.humidity %>%</h6>
                        <% } else { %>
                            <h6 class="mb-2">- %</h6>
                        <% } %>
                        <span class="text-success small pt-1 fw-bold">Kelembapan Udara</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
      </section>
      
        
      

      <section class="section parameters">
        <div class="row">
          <% inaData.forEach(item => { %>
            <!-- Card untuk setiap node -->
            <div class="col-xxl-2 col-md-4 col-sm-6">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title">Node <%= item.node_id %></h5>
                  
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-lightning-charge"></i> <!-- Icon untuk Arus -->
                    </div>
                    <div class="ps-3">
                      <h6 class="mb-2">
                        <strong><%= item.current !== null ? item.current : 'N/A' %> mA</strong> <!-- Menampilkan nilai arus -->
                        <span class="text-muted small pt-2 ps-1">Arus</span>
                      </h6>
                      <h6 class="mb-2">
                        <strong><%= item.voltage !== null ? item.voltage : 'N/A' %> V</strong> <!-- Menampilkan nilai tegangan -->
                        <span class="text-muted small pt-2 ps-1">Tegangan</span>
                      </h6>
                      <h6 class="mb-2">
                        <strong><%= item.power !== null ? item.power : 'N/A' %> mW</strong> <!-- Menampilkan nilai daya -->
                        <span class="text-muted small pt-2 ps-1">Daya</span>
                      </h6>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
          
              
      
            </div> <!-- End of Row for Parameters -->
          </div> <!-- End of Column for Parameters Section -->
        </section>

